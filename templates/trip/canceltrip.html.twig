{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Annulation de la sortie{% endblock %}

{% block main %}
    <h2>Annuler une sortie</h2>

    {{ form_start(form) }}
        <div class="divform">
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
        </div>
        <div class="divform">
            {{ form_label(form.dateTimeStart) }}
            {{ form_widget(form.dateTimeStart) }}
        </div>
        <div class="divform">
            {{ form_label(form.siteOrganiser) }}
            {{ form_widget(form.siteOrganiser) }}
        </div>
        <div class="divform">
            {{ form_label(form.city) }}
            {{ form_widget(form.city) }}
        </div>
        <div class="divform">
            {{ form_label(form.place) }}
            {{ form_widget(form.place) }}
        </div>
        <div class="divform">
            {{ form_label(form.motif) }}
            {{ form_widget(form.motif) }}
        </div>
        <div class="divform">
            {{ form_rest(form) }}
            <button type="submit" name="save" value="save">Enregistrer</button>
            <a href="{{path('home')}}"><button type="reset" name="cancel" value="cancel">Annuler</button></a>
        </div>
    {{ form_end(form) }}
{% endblock %}
